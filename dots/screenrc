# support for xterm
termcapinfo xterm* ti@:te@

# no visual bell
vbell off

# highlighting for text marking and printing messages
sorendition 05 g

# huge scrollback buffer
defscrollback 5000

# no welcome message
startup_message off

# status line
hardstatus alwayslastline
hardstatus string '%{= kG}[ %{G}%H %{g}][%= %{= kw}%?%-Lw%?%{r}(%{W}%n*%f%t%?(%u)%?%{r})%{w}%?%+Lw%?%?%= %{g}][%{B} %m-%d %{W}%c %{g}]'
